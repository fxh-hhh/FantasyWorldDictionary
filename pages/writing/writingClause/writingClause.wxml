<view wx:if="{{id==3}}">
  <block wx:for="{{event}}" wx:for-item="event">    
    <view class="weui-cells__title">{{event.field}}</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="{{event.default}}" />
        </view>
      </view>
    </view>
  </block>
</view>
